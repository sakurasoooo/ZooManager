@page "/"
@using ZooManager

<style>

    button {
        width: 75px;
        height: 75px;
        font-size: 50px;
    }

        button.sm {
            display: inline-flex;
            width: 50px;
            height: 50px;
            justify-content: center;
            align-items: center;
            font-size: 30px;
        }

    sub {
        display: inline-block;
        color: green;
        font-size: .5em;
        position: relative;
        display: block;
        text-align: right;
        line-height: 1.2;
    }

    sup {
        display: inline-block;
        font-size: .5em;
        position: relative;
        display: block;
        text-align: right;
        line-height: 0,5;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1 style="text-align:end">Add Zones:</h1>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddZones(Direction.down))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>⏬</h2>
            </button>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddZones(Direction.up))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>⏫</h2>
            </button>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddZones(Direction.left))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>⏪</h2>
            </button>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddZones(Direction.right))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>⏩</h2>
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h1 style="text-align:end">Add Animal to Holding:</h1>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddAnimalToHolding("cat"))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>🐱</h2>
            </button>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddAnimalToHolding("mouse"))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>🐭</h2>
            </button>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddAnimalToHolding("raptor"))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>🦅</h2>
            </button>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddAnimalToHolding("chick"))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>🐥</h2>
            </button>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddAnimalToHolding("alien"))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>🦠</h2>
            </button>
        </div>
        <div class="col-1">
            <button @onclick="@(() => Game.AddAnimalToHolding("boulder"))"
                    type="button" class="sm btn btn-outline-dark">
                <h2>🪨</h2>
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h1 style="text-align:end">Holding Pen:</h1>
        </div><div class="col-6">
            <button disabled type="button" class="btn btn-outline-dark">
                <h2>
                    @Game.holdingPen.emoji
                <sup>@Game.holdingPen.rtLabel</sup>
                <sub>@Game.holdingPen.turnLabel</sub>
            </h2>
        </button>
    </div>
</div>
<div class="row">
    <div class="col">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col">
        <table align="center">
            @for (var y = 0; y < Game.map.Height; y++)
            {
                <tr>
                    @for (var x = 0; x < Game.map.Width; x++)
                    {
                        var _x = x;
                        var _y = y;
                        <td>
                            <button @onclick="@(() => Game.ZoneClick(Game.map.AnimalZones[_y][_x]))"
                                    type="button" class="btn btn-outline-dark">
                                <h2>
                                    @(Game.map.AnimalZones[_y][_x].emoji)
                                    <sup>@(Game.map.AnimalZones[_y][_x].rtLabel)</sup>
                                    <sub>@(Game.map.AnimalZones[_y][_x].turnLabel)</sub>
                                </h2>
                            </button>
                        </td>
                    }
                </tr>
            }
        </table>
    </div>
</div>
</div>

@code {
    protected override void OnInitialized()
    {
        Game.SetUpGame();
        Game.Update += OnUpdate;
    }

    public async Task OnUpdate()
    {
        await InvokeAsync(() =>
        {
            StateHasChanged();
        });
    }
}


